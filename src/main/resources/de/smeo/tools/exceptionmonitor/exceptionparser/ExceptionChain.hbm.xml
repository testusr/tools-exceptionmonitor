<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="de.smeo.tools.exceptionmonitor.exceptionparser">

	<class name="ExceptionChain" table="EMON_EXCEPTIONCHAIN">
		<id name="id" column="ID">
			<generator class="native" />
		</id>
		
        <set name="causedByChain" table="EMON_ECC_CBCHAIN">
            <key column="EXC_CHAIN_ID"/>
            <element type="Exception" column="EXCEPTION_ID"/>
        </set>
	</class>

</hibernate-mapping>